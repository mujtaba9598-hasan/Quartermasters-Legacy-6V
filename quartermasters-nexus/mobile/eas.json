{
    "cli": {
        "version": ">= 12.0.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "preview": {
            "distribution": "internal",
            "ios": {
                "simulator": true
            }
        },
        "production": {
            "autoIncrement": true
        }
    },
    "submit": {
        "production": {
            "ios": {
                "appleId": "PLACEHOLDER_APPLE_ID",
                "ascAppId": "PLACEHOLDER_ASC_APP_ID",
                "appleTeamId": "PLACEHOLDER_TEAM_ID"
            },
            "android": {
                "serviceAccountKeyPath": "./google-service-account.json",
                "track": "production"
            }
        }
    }
}
