{
    "expo": {
        "name": "Quartermasters",
        "slug": "quartermasters",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "dark",
        "scheme": "quartermasters",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0a0f1a"
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.quartermasters.app",
            "buildNumber": "1",
            "infoPlist": {
                "NSCameraUsageDescription": "Upload documents for consulting review",
                "NSPhotoLibraryUsageDescription": "Attach files to your consultation"
            },
            "config": {
                "usesNonExemptEncryption": false
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0a0f1a"
            },
            "package": "com.quartermasters.app",
            "versionCode": 1,
            "permissions": ["INTERNET", "VIBRATE", "RECEIVE_BOOT_COMPLETED"]
        },
        "web": {
            "favicon": "./assets/favicon.png",
            "bundler": "metro"
        },
        "plugins": [
            "expo-router",
            [
                "expo-notifications",
                {
                    "icon": "./assets/notification-icon.png",
                    "color": "#C15A2C"
                }
            ]
        ],
        "extra": {
            "eas": {
                "projectId": "PLACEHOLDER_EAS_PROJECT_ID"
            },
            "webAppUrl": "https://quartermasters.me"
        }
    }
}
